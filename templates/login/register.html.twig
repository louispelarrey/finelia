{% extends "base/user_base.html.twig" %}

{% block title %}
	{{ parent() }}
	Inscription
{% endblock %}

{% block body %}
	<div class="register-container full-height sm-p-t-30">
		<div class="d-flex justify-content-center flex-column full-height ">
			<h3>Bienvenue dans le gestionnaire</h3>
			<p>
				Remplissez le formulaire pour pouvoir créer votre compte.
			</p>
			{{ form_start(registrationForm, {'attr': {'class': 'p-t-15', 'id': 'form-register'}}) }}
			<div class="row">
				<div class="col-md-6">
					<div class="form-group form-group-default">
						<label>Prénom</label>
						{{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}})}}
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group form-group-default">
						<label>Nom</label>
						{{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group form-group-default">
						<label>Email</label>
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group form-group-default">
						<label>Mot de Passe</label>
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="row m-t-10">
				<div class="col-lg-6">
					<p>
						<small>J'accepte les
							<a href="#" class="text-info">Conditions Générales</a>.</small>
					</p>
				</div>
				<div class="col-lg-6 text-right">
					<a href="#" class="text-info small">Un problème ?</a>
				</div>
			</div>
			<a href="index.html">
				<button aria-label="" class="btn btn-primary btn-cons m-t-10" type="submit">Créer le compte !</button>
			</a>
		</div>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
