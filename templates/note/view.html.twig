<html lang="fr">
<head>
    {% block title %}
        <title>Gestionnaire de note - Ajout</title>
    {% endblock %}
    {% block metaTag %}
        {% include "parts/meta_tags.html.twig" %}
    {% endblock %}
    {% block stylesheets %}
        {% include "parts/stylesheet_user.html.twig" %}
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css"/>
    {% endblock %}
    {% block icons %}
        {% include "parts/icons.html.twig" %}
    {% endblock %}
    {% block meta %}
        {% include "parts/meta.html.twig" %}
