<html lang="fr">
<head>
    {% block title %}
        <title>Gestionnaire de note - Ajout</title>
    {% endblock %}
    {% block metaTag %}
        {% include "parts/meta_tags.html.twig" %}
    {% endblock %}
    {% block stylesheets %}
        {% include "parts/stylesheet_user.html.twig" %}
    {% endblock %}
    {% block icons %}
        {% include "parts/icons.html.twig" %}
    {% endblock %}
    {% block meta %}
        {% include "parts/meta.html.twig" %}
    {% endblock %}
</head>
<body class="fixed-header horizontal-menu horizontal-app-menu ">

{% include "parts/menu.html.twig" %}
<div
        class="page-container ">
    <!-- START PAGE CONTENT WRAPPER -->
    <div
            class="page-content-wrapper ">
        <!-- START PAGE CONTENT -->
        <div
                class="content ">
            <!-- START CONTAINER FLUID -->
            <div
                    class=" container p-t-30   container-fixed-lg">
                <!-- START BREADCRUMB -->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Gestionnaire</a>
                    </li>
                    <li class="breadcrumb-item active">Insertion</li>
                </ol>
                <!-- END BREADCRUMB -->
                <div class="row">
                    <div class="col-xl-6 col-xlg-6">
                        <!-- START card -->
                        <div class="card no-padding">
                            <div class="card-header "></div>
                            <div class="card-body">
                                <!-- FORM INFO -->
                                <div class="col-md-12">
                                    <h3 class="mw-80">Ajouter des notes
                                    </h3>
                                    <p class="mw-80">Insérez autant de notes que vous le souhaitez et ensuite sauvegardez
                                    </p>
                                    <br>
                                    {{ form_start(noteForm, {'attr': {'class': 'form-horizontal', 'id': 'form-work'}}) }}
                                    <div class="form-group row">
                                        <label class="col-md-5 control-label">Utilisateur</label>
                                        <div class="col-md-7">
                                            {{ form_widget(noteForm.user, {'attr': {'class': 'form-control', 'placeholder': 'Utilisateur'}})}}
                                            <span class="help"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                    <label class="col-md-5 control-label">Note /20</label>
                                        <div class="col-md-7">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    {{ form_widget(noteForm.matiere, {'attr': {'class': 'form-control', 'data-init-plugin': "cs-select"}})}}
                                                </div>
                                                <div class="col-md-6">
                                                    {{ form_widget(noteForm.note, {'attr': {'class': 'form-control', 'placeholder': 'Note'}})}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <p class="small-text hint-text">Note: pour ajouter plus d'une note à la fois veuillez appuyer sur le bouton <b>+</b>
                                            </p>
                                        </div>
                                        <div class="col">
                                            <div class="">
                                                <button aria-label="" class="btn btn-success pull-right" type="submit">Sauvegarder</button>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(noteForm) }}
                                </div>
                                <br><br>
                                <div class="col-md-12 right">
                                    <h3 class="mw-80">Ajouter des matières
                                    </h3>
                                    <p class="mw-80">Ajoutez les matières pour pouvoir insérer des notes
                                    </p>
                                    <br>
                                    {{ form_start(matiereForm, {'attr': {'class': 'form-horizontal', 'id': 'form-work'}}) }}
                                    <div class="form-group row">
                                        <label class="col-md-5 control-label">Matière</label>
                                        <div class="col-md-7">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    {{ form_widget(matiereForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
                                                </div>
                                                <div class="col-md-6">
                                                    {{ form_widget(matiereForm.coef, {'attr': {'class': 'form-control', 'placeholder': 'Coefficient'}})}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col">
                                            <button aria-label="" class="btn btn-success pull-right" type="submit">Sauvegarder</button>
                                        </div>
                                    </div>
                                    {{ form_end(matiereForm) }}
                                </div>
                            </div>
                        </div>
                        <!-- END card -->
                    </div>
                </div>
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->
        <!-- START COPYRIGHT -->
        <!-- START CONTAINER FLUID -->
        <!-- START CONTAINER FLUID -->
        <div class=" container   container-fixed-lg footer"> <div class="copyright sm-text-center">
                <p class="small-text no-margin pull-left sm-pull-reset">
                    ©2021-{{ 'now' | date('Y') }}
                    <span class="hint-text m-l-15">Pelarrey</span>
                </p>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- END COPYRIGHT -->
    </div>
    <!-- END PAGE CONTENT WRAPPER -->
</div>
<!-- END PAGE CONTAINER -->
